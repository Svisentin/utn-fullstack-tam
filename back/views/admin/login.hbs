<form
  class="form m-auto p-5 d-flex flex-column justify-content-center"
  action="/admin/login"
  method="post"
>
  <div class="">
    <div class="row mb-3">
      <label for="inputEmail3" class="col col-form-label">Email</label>
      <div class="col">
        <input
          type="text"
          class="form-control"
          id="inputEmail3"
          name="usuario"
        />
      </div>
    </div>
    <div class="row mb-3">
      <label
        for="inputPassword3"
        class="col col-form-label"
      >Password</label>
      <div class="col">
        <input
          type="password"
          class="form-control"
          id="inputPassword3"
          name="password"
        />
      </div>
    </div>
    <button type="submit" class="w-100 btn btn-dark align-middle">Ingresar</button>
  </div>

  
  {{#if error}}
    <p>Usuario o clave incorrecto.</p>
  {{/if}}

</form>